[project]
name = "djxwind-core"
version = "0.1"
description = "Backend"
readme = "README.md"
keywords = ["django", "tailwindcss", "htmx", "alpinejs"]
license = { text = "MIT" }
authors = [{ name = "Khoi Nguyen Tinh Song", email = "songkhoi123@gmail.com" }]
classifiers = [
    "Development Status :: 3 - Alpha",
    "Environment :: Console",
    "Operating System :: OS Independent",
    "Intended Audience :: Developers",
    "License :: OSI Approved :: MIT License",
    "Natural Language :: English",
    "Programming Language :: Python :: 3",
    "Programming Language :: Python :: 3.10",
    "Programming Language :: Python :: 3.11",
    "Programming Language :: Python :: 3.12",
    "Topic :: Utilities",
    "Framework :: Django :: 5.1",
]
requires-python = ">=3.12"
dependencies = ["django>=5.0.7"]

[project.optional-dependencies]
tests = ["pytest>=8.3.2"]
lint = ["pre-commit>=3.8.0", "ruff>=0.5.5"]
typing = ["mypy>=1.11.0"]


[tool.mypy]
strict = true
pretty = true
